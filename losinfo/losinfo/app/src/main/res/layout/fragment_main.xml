<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/slightWhite"
    android:id="@+id/drawer_layoutl"
    tools:context="com.losaltosinfo.justin.losinfo.MainFragment"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--<com.daimajia.slider.library.SliderLayout-->
            <!--android:id="@+id/slider"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_width="match_parent"-->
            <!--&gt;-->

        <!--</com.daimajia.slider.library.SliderLayout>-->

        <TextView
            android:text="Los Altos High School"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/slightWhiteTransparent"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/Black" />

        <Button
            android:text="201 Almond Ave, Los Altos, CA 94022"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/mapButton"
            android:layout_marginBottom="20dp"
            android:stateListAnimator="@null"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp" />

    </android.support.percent.PercentRelativeLayout>


</RelativeLayout>
